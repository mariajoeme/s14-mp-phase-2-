{{>jumbotron}}

<!-- MODALS/POP UPS -->
<!-- UPDATE USER  -->
<div class="modal fade" id="modalupdateuser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Update User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="survey-head text-center"> 
              <p><span class="font-weight-bold">Fill out the Following Information</span></p>
        </div>
      </div>
      <div class="modal-body mx-3">
        <p><span class="font-weight-bold">Update the User's Information</span></p>
        <div class="md-form mb-5">
          <input type="text" class="form-control validate">
          <label data-error="wrong" data-success="right">Name</label>
        </div>

      <div class="md-form mb-4">
           <input type="text" class="form-control validate">
          <label data-error="wrong" data-success="right">ID Number</label>
        </div>

        <div class="md-form mb-4">
          <p class = "text-center"> Is the user an Admin?</p>
          <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-179" value="option1">
          <label class="form-check-label" for="radio-179">Yes</label>
        </div>
           <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-279" value="option1">
          <label class="form-check-label" for="radio-279">No</label>
        </div>
        </div>

        
      </div>

      <div class="modal-footer d-flex justify-content-center">
        <button  class="btn btn-primary btn-sm text-white">Update User</button>
      </div>
    </div>
  </div>
</div>

<!-- DELETE USER 2 -->
<div class="modal fade" id="modaldeleteuser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Delete User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="survey-head text-center"> 
              <p><span class="font-weight-bold">Warning:</span> Deleting a User means the user's information will be deleted, <span class="font-weight-bold">and all user information will be deleted</span>
              </p>
        </div>
      </div>

      <div class="modal-body mx-3">
        <h5 class = "text-center"><span class="font-weight-bold">Are you sure you want to delete this account?</span></h5>
         
        <div class="md-form mb-5">
         <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-179" value="option1">
          <label class="form-check-label" for="radio-179">Yes</label>
        </div>
           <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-279" value="option1">
          <label class="form-check-label" for="radio-279">No</label>
        </div>
        </div>
    </div>

      <div class="modal-footer d-flex justify-content-center">
        <button  class="btn btn-primary btn-sm text-white">Delete User</button>
      </div>
    </div>
  </div>
</div>

<!-- BAN USER 2 -->

<div class="modal fade" id="modalbanuser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Ban User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="survey-head text-center"> 
              <p><span class="font-weight-bold">Warning:</span> Banning a User means the user cannot post a review and comment on a review, <span class="font-weight-bold">yet the user can still have access to the website</span>
              </p>
        </div>
      </div>

      <div class="modal-body mx-3">
        <h5 class = "text-center"><span class="font-weight-bold">Are you sure you want to ban this user?</span></h5>

      <div class="md-form mb-5">
         <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-179" value="option1">
          <label class="form-check-label" for="radio-179">Yes</label>
        </div>
           <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-279" value="option1">
          <label class="form-check-label" for="radio-279">No</label>
        </div>
          
      </div>

    </div>

      <div class="modal-footer d-flex justify-content-center">
        <button  class="btn btn-primary btn-sm text-white">Ban User</button>
      </div>
    </div>
  </div>
</div>


<!-- MAIN CONTENT -->
<div class="row mt-sm-4 mt-md-0">
  <div class="col-sm-12 col-md-8">
     <div class="row mt-sm-3 mt-md-0">
    <div class="col-sm-12 col-md-6">
        <div class="btn btn-primary">
            <label>Show No. of Entries</label>
            <select id = "noEntries"  data-toggle="dropdown" class = "btn btn-primary dropdown-toggle">
              <option class="dropdown-item" value = "5">5</option>
              <option class="dropdown-item" value = "10">10</option>
              <option class="dropdown-item" value = "15">15</option>
              <option class="dropdown-item" value = "50">50</option>
            </select>
          </div>
        </div>
        <!--
        <div class="col-sm-12 col-md-4">
          
          <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Type something to search list items">
        </div>
         -->
        </div>
    <h3>User Information</h3>
    <table class="table table-hover table-light mb-5" id = "myTable">
    <thead class="thead-green">
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">ID Number</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <th scope="row"></th>
          <td>{{this.studentName}}</td>
          <td>{{this.studentId}}</td>
          <td class="text-center">
            <div class="dropdown">
              <button class="btn btn-primary btn-sm text-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modalupdateuser">Update Info</a>
                <a class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modalbanuser">Ban Account</a>
                <a class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modaldeleteuser">Delete Account</a>
              </div>
            </div>
      
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
            <ul id="paging" class="pagination justify-content-center">
            </ul>
          </nav>
  </div>

  <div class="col-sm-12 col-md-4">
    <h3 class="text-center" id="addCollege">Add User</h3>
    <div class="card mb-4">
      <div class="card-body">
        <div class="text-center">
          <img src="/assets/logo_box_green.jpg" width="100" class="rounded-10 d-inline-block align-top mt-2 mb-3" alt="DLSU Community Forum">
        </div>

        <form>
          <div class="form-group row">
            <label for="addFullName" class="col-sm-5 col-form-label">Full Name</label>
            <input type="text" name="fullName" class="form-control col-sm-6" placeholder="Juan Dela Cruz" required></input>
          </div>
          <div class="form-group row">
            <label for="addIdNum" class="col-sm-5 col-form-label">ID Number</label>
            <input type="number" name="idNum" class="form-control col-sm-6" placeholder="11712345" required></input>
          </div>
          <div class="form-group row">
            <label for="addPassword1" class="col-sm-5 col-form-label">Password</label>
            <input type="password" name="password1" class="form-control col-sm-6" placeholder="p@ssw0rd!" required></input>
          </div>
          <div class="form-group row">
            <label for="addPassword2" class="col-sm-5 col-form-label">Confirm Password</label>
            <input type="password" name="password2" class="form-control col-sm-6 mt-2" placeholder="p@ssw0rd!" required></input>
          </div>
          <div class="form-group row">
            <label for="addAdmin" class="col-sm-5 col-form-label">Admin?</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="adminYes" id="adminYes" value="option1">
              <label class="form-check-label" for="adminYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="adminNo" id="adminNo" value="option2">
              <label class="form-check-label" for="adminNo">No</label>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary mt-0 mb-2">Add User</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
