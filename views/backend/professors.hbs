{{>jumbotron}}
<!-- UPDATE PROF -->
<div class="modal fade" id="modalupdateprof" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Update Professor</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="survey-head text-center"> 
              <p><span class="font-weight-bold">Fill out the Following Information</span></p>
        </div>
        <p class = "text-center">Input N/A if do not want to update the info</p>
        <div class="md-form mb-5">
          <input value="N/A" type="text" class="form-control validate">
          <label data-error="wrong" data-success="right">Name</label>
        </div>

      <div class="md-form mb-4">
           <select class="form-control">
             <option selected>N/A</option>
             {{#each colleges}}
             <option>{{this.shortName}}</option>
             {{/each}}

           </select>
          <label data-error="wrong" data-success="right">College</label>
        </div>

      <div class="md-form mb-4">
           <select class="form-control">
             <option selected>N/A</option>
             <option>Male</option>
             <option>Female</option>
           </select>
          <label data-error="wrong" data-success="right">Gender</label>
        </div>
       </div>
      <div class="modal-footer d-flex justify-content-center">
        <button  class="btn btn-primary btn-sm text-white">Update College</button>
      </div>
    </div>
  </div>
</div>

<!-- DELETE PROFESSOR -->
<div class="modal fade" id="modaldeleteprof" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Delete User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="survey-head text-center"> 
              <p><span class="font-weight-bold">Warning:</span> Deleting a professor means the professor's information will also be deleted, <span class="font-weight-bold">and this action cannot be undone</span>
              </p>
        </div>
      </div>

      <div class="modal-body mx-3">
        <h5 class = "text-center"><span class="font-weight-bold">Are you sure you want to delete this professor?</span></h5>
         
        <div class="md-form mb-5">
         <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-179" value="option1">
          <label class="form-check-label" for="radio-179">Yes</label>
        </div>
           <div class="form-check mb-4">
          <input class="form-check-input" name="group1" type="radio" id="radio-279" value="option1">
          <label class="form-check-label" for="radio-279">No</label>
        </div>
        </div>
    </div>

      <div class="modal-footer d-flex justify-content-center">
        <button  class="btn btn-primary btn-sm text-white">Delete College</button>
      </div>
    </div>
  </div>
</div>

<!--    MAIN CONTENT    -->
<div class="row mt-sm-4 mt-md-0">
  <div class="col-sm-12 col-md-8">
    <div class="row mt-sm-3 mt-md-0">
    <div class="col-sm-12 col-md-6">
        <div class="btn btn-primary">
            <label>Show No. of Entries</label>
            <select  id = "noEntries" data-toggle="dropdown" class = "btn btn-primary dropdown-toggle">
              <option class="dropdown-item" value = "10">10</option>
              <option class="dropdown-item" value = "15">15</option>
              <option class="dropdown-item" value = "50">50</option>
            </select>
          </div>
        </div>
        <!--
        <div class="col-sm-12 col-md-4">
          
          <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Type something to search list items">
        </div>
         -->
        </div>
    <h3>Professor Information</h3> 
    <table class="table table-hover table-light mb-5" id = "myTable">
    <thead class="thead-green">
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">College</th>
        <th scope="col">Course</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
    {{#each professor}}
        <tr>
          <th scope="row"></th>
          <td>{{this.profName}}</td>
          <td>{{this.college}}</td>
          <td>{{this.profCourse}}</td>
          <td class="text-center">
            <div class="dropdown">
              <button class="btn btn-primary btn-sm text-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modalupdateprof">Update Info</a>
                <a class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modaldeleteprof">Delete Professor</a>
              </div>
            </div>
          </td> 
        </tr>
    {{/each}} 
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
            <ul id="paging" class="pagination justify-content-center">
            </ul>
          </nav>
  </div>

  <div class="col-sm-12 col-md-4">
    <h3 class="text-center" id="addCollege">Add Professor</h3>
    <div class="card mb-4">
      <div class="card-body">
        <div class="text-center">
          <img src="/assets/logo_box_green.jpg" width="100" class="rounded-10 d-inline-block align-top mt-2 mb-3" alt="DLSU Community Forum">
        </div>

        <form>
          <div class="form-group row">
            <label for="addFullName" class="col-sm-5 col-form-label">Full Name</label>
            <input type="text" name="fullName" class="form-control col-sm-6" placeholder="Juan Dela Cruz" required></input>
          </div>
          <div class="form-group row">
            <label for="addCollege" class="col-sm-5 col-form-label">College</label>
            <input type="text" name="college" class="form-control col-sm-6" placeholder="CCS" required></input>
          </div>
          <div class="form-group row">
            <label for="addCourse" class="col-sm-5 col-form-label">Course</label>
            <input type="text" name="course" class="form-control col-sm-6" placeholder="One Only" required></input>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary mt-0 mb-2">Add Professor</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
